<% provide(:title, "勤怠情報の修正") %>

<div class="container">
    <div class="row justify-content-center py-5">
        <div class="col-md-6 col-md-offset-3 p-4 bg-white">
            <h1 class="text-center mb-3">勤怠情報の修正</h1>
            <%= form_with(model: @work, local: true) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>

                <%= f.label :day, "日付" %>
                <%= f.date_field :day, class: "form-control" %>

                <%= f.label :start, "出勤時刻" %>
                <%= f.time_field :start, class: "form-control" %>

                <%= f.label :finish, "退勤時刻" %>
                <%= f.time_field :finish, class: "form-control" %>

                <%= f.submit "変更", class: "btn btn-primary w-100 mt-3" %>
            <% end %>
        </div>
    </div>
</div>