<% provide(:title, "ユーザ情報の編集") %>

<div class="container">
    <div class="row justify-content-center py-5">
        <div class="col-md-6 col-md-offset-3 p-4 bg-white">
            <h1 class="text-center mb-3">ユーザ情報の編集</h1>
            <%= form_with url: { controller: 'rights', action: 'user_update'} ,model: @user ,motod: :patch, local: true do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <%= f.hidden_field :id ,value: @user.id %>
                <%= f.label :name, "名前" %>
                <%= f.text_field :name, class: "form-control" %>

                <%= f.label :number, "4桁の番号" %>
                <%= f.text_field :number, class: "form-control" %>

                <%= f.label :money, "時給" %>
                <%= f.number_field :money, class: "form-control" %>

                <%= f.label :password, "パスワード" %>
                <%= f.password_field :password, class: "form-control" %>

                <%= f.label :password_confirmation, "パスワードを確認" %>
                <%= f.password_field :password_confirmation, class: "form-control" %>

                <%= f.submit "変更", class: "btn btn-primary w-100 mt-3" %>
            <% end %>
        </div>
    </div>
</div>
